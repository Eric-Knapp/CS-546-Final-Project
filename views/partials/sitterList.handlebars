<h1 id="findSitter">Find a Sitter</h1>

<body>
    <form id="sitterSearchForm">
        <label for="search_term">Search for a sitter:</label>
        <input id="search_term" type="text" name="search_term" placeholder="Enter a Sitter Name" />
        <button type="submit">Search</button>
    </form>

    <Section>

        <div id="sitterListID">
            <ul id = "sitterList">
            {{#each sitters}}
            <article>
                <li id="sitter"><a href="/searchSitter/{{_id}}">{{firstName}} {{lastName}}</a></li>
            </article>
            {{/each}}
            </ul>
        </div>

    </Section>

