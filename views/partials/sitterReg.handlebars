<body>
  <div class="OuterContainer">
    <div class="innerContainer">
      <h1>Please Register Below</h1>
      <br />
      <p> Select if you are a pet owner or a pet sitter</p>
      <br />
      <br />
    </div>
    <div class="innerContainer">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <form
            action="/users/registerSitter"
            method="POST"
            role="form"
            enctype="application/x-www-form-urlencoded"
          >
            <legend>Enter Your Information Below</legend>
            <div class="form-group">
              <label for="first_name"> First Name</label>
              <input
                type="text"
                class="form-control"
                name="first_name"
                id="first_name"
                placeholder="First Name"
                required
              />
            </div>
            <br />
            <div class="form-group">
              <label for="last_name"> Last Name </label>
              <input
                type="text"
                class="form-control"
                name="last_name"
                id="last_name"
                placeholder="Last Name"
                required
              />
            </div>
            <br />
            <div class="form-group">
              <label for="user_name"> User Name </label>
              <input
                type="text"
                class="form-control"
                name="user_name"
                id="user_name"
                placeholder=" Username"
                required
              />
            </div>
            <br />
            <div class="form-group">
              <label for="email"> Email Address </label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                placeholder=" Email Address"
                required
              />
            </div>
            <br />
            <div class="form-group">
              <label for="password"> Password </label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="password"
                placeholder="Password"
                required
              />
            </div>
            <br />
            <div class="form-group">
              <label for="password_confm"> Re Enter Password </label>
              <input
                type="password"
                class="form-control"
                name="password_confm"
                id="password_confm"
                placeholder="Re enter your password"
                required
              />
              <br />
              <button type="submit" class="Buttons">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
</body>