

<div>
	<h1>Sign In</h1>
	<div class="errors">{{errors}}</div>
	<form method="post" action="/signin" id="login-form">
		<label for="user_name">Username</label>
		<input
			class="form-control"
			type="text"
			id="user_name"
			name="user_name"
			placeholder="Username"
			required
		/>
		<label for="password">Password</label>
		<input
			class="form-control"
			type="password"
			id="password"
			name="password"
			placeholder="Password"
			required
		/>
		<button type="submit" class="Buttons">Sign In</button>
	</form>

</div>